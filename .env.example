# =============================================================================
# EcoLabel-MS2027 Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# pgAdmin Configuration
# =============================================================================
PGADMIN_EMAIL=admin@ecolabel.local
PGADMIN_PASSWORD=admin

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000

# =============================================================================
# Service Database URLs
# =============================================================================
PARSER_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/parser_db
NLP_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nlp_db
LCA_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lca_db
SCORING_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/scoring_db
WIDGET_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/widget_db
PROVENANCE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/provenance_db

# =============================================================================
# Service URLs (for inter-service communication)
# =============================================================================
PARSER_SERVICE_URL=http://localhost:8001
NLP_SERVICE_URL=http://localhost:8002
LCA_SERVICE_URL=http://localhost:8003
SCORING_SERVICE_URL=http://localhost:8004
WIDGET_SERVICE_URL=http://localhost:8005
PROVENANCE_SERVICE_URL=http://localhost:8006

# =============================================================================
# MLflow Configuration
# =============================================================================
